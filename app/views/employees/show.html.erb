<%= individual_attendance %>
<table>
  <thead>
    <tr>
      <th>Entrada</th>
      <th>Colacio</th>
      <th>Regreso colaci√≥n</th>
      <th>Salida</th>
    </tr>
  </thead>
 
  <tbody>
    <% @newatt.each do |row| %>
      <tr>
        <% if row.action == 0 %>
          <td><%= "entrada #{row.month}" %></td>
